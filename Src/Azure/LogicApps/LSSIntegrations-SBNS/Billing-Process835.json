                                    }
                                },
                                "Condition_1": {
                                    "type": "If",
                                    "expression": {
                                        "and": [
                                            {
                                                "greater": [
                                                    "@float(body('Parse_JSON')?['cas03'])",
                                                    0
                                                ]
                                            }
                                        ]
                                    },
                                    "actions": {
                                        "Update_check": {
                                            "type": "ApiConnection",
                                            "inputs": {
                                                "host": {
                                                    "connection": {
                                                        "referenceName": "commondataservice-1"
                                                    }
                                                },
                                                "method": "patch",
                                                "headers": {
                                                    "prefer": "return=representation,odata.include-annotations=*",
                                                    "accept": "application/json;odata.metadata=full",
                                                    "organization": "https://lssmndryrun2.crm.dynamics.com"
                                                },
                                                "path": "/api/data/v9.1/@{encodeURIComponent(encodeURIComponent('pics_checks'))}(@{encodeURIComponent(encodeURIComponent(body('pics_check_insert')?['pics_checkid']))})"
                                            }
                                        }
                                    },
                                    "else": {
                                        "actions": {}
                                    },
                                    "runAfter": {
                                        "Claim_activity_second_insert": [
                                            "SUCCEEDED"
                                        ]
                                    }
                                },
                                "Set_variable_totalPaid": {
                                    "type": "SetVariable",
                                    "inputs": {
                                        "name": "totalPaid",
                                        "value": "@first(body('Claim_Seek_for_takeback')?['value'])?['new_paymentamount']"
                                    },
                                    "runAfter": {
                                        "pics_check_insert": [
                                            "SUCCEEDED"
                                        ]
                                    }
                                },
                                "Update_claims_withdraw": {
