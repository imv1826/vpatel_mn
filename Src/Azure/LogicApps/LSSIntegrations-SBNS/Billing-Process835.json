                                            }
                                        },
                                        "method": "post",
                                        "body": {
                                            "pics_checkid@odata.bind": "@body('pics_check_insert')?['pics_checkid']"
                                        },
                                        "headers": {
                                            "prefer": "return=representation,odata.include-annotations=*",
                                            "organization": "https://lssmndryrun2.crm.dynamics.com"
                                        },
                                        "path": "/api/data/v9.1/@{encodeURIComponent(encodeURIComponent('pics_claimactivities'))}"
                                    },
                                    "runAfter": {
                                        "Update_claims_withdraw": [
                                            "SUCCEEDED"
                                        ]
                                    }
                                },
                                "Claim_activity_spendown_insert_": {
