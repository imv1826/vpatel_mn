{
    "definition": {
        "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
        "actions": {
            "Execute_query": {
                "type": "ServiceProvider",
                "inputs": {
                    "parameters": {
                        "query": "USE PICS_CE_Staging;\nSELECT DISTINCT TOP 10\n        h.ISA08\n       ,h.BPR02\n       ,h.BPR16\n       ,h.TRN02\n       ,l.ID\n       ,l.CLP01\n       ,l.CLP07\n       ,CONVERT(MONEY, svc02) AS svc02\n       ,CONVERT(MONEY, svc03) AS svc03\n       ,CAS01\n       ,CAS02\n       ,CONVERT(MONEY, cas03) cas03\n       ,CAS05\n       ,CONVERT(MONEY, cas06) cas06\n       ,lq.Desciption\nFROM    ClpSvcCas l\n        INNER JOIN Isabprtrn h ON h.ID = l.ID\n        LEFT OUTER JOIN ( SELECT  CLP01 ,STUFF(\n                                (SELECT   CHAR(10) + CHAR(13)\n                                                    + r.pics_Description\n                                           FROM     ClpLq\n                                                    INNER JOIN PICS_CE_Staging.stg.pics_claimdenialremark r ON r.pics_name = ClpLq.LQ02\n                                           WHERE    ( clp01 = Results.clp01 )\n                                    FOR   XML PATH(''),TYPE).value('(./text())[1]', 'VARCHAR(MAX)'), 1,\n                                          2, '') AS Desciption\n                          FROM      ClpLq Results\n                          GROUP BY  clp01\n                        ) lq ON lq.CLP01 = l.CLP01\nORDER BY CLP01 ,cas03 ASC;"
                    },
                    "serviceProviderConfiguration": {
                        "connectionName": "sql-6",
                        "operationId": "executeQuery",
                        "serviceProviderId": "/serviceProviders/sql"
                    }
                },
                "runAfter": {
                    "Initialize_totalPaid": [
                        "SUCCEEDED"
                    ]
                }
            },
            "For_each": {
                "type": "foreach",
                "foreach": "@first(body('Execute_query'))",
                "actions": {
                    "Parse_JSON": {
                        "type": "ParseJson",
                        "inputs": {
                            "content": "@items('For_each')",
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "ISA08": {
                                        "type": "string"
                                    },
                                    "BPR02": {
                                        "type": "string"
                                    },
                                    "BPR16": {
                                        "type": "string"
                                    },
                                    "TRN02": {
                                        "type": "string"
                                    },
                                    "ID": {
                                        "type": "string"
                                    },
                                    "CLP01": {
                                        "type": "string"
                                    },
                                    "CLP07": {
                                        "type": "string"
                                    },
                                    "svc02": {
                                        "type": "number"
                                    },
                                    "svc03": {
                                        "type": "number"
                                    },
                                    "CAS01": {
                                        "type": "string"
                                    },
                                    "CAS02": {
                                        "type": "string"
                                    },
                                    "cas03": {
                                        "type": "number"
                                    },
                                    "CAS05": {},
                                    "cas06": {},
                                    "Desciption": {}
                                }
                            }
                        }
                    },
                    "pics_check_seek": {
                        "type": "ApiConnection",
                        "inputs": {
                            "host": {
                                "connection": {
                                    "referenceName": "commondataservice-1"
                                }
                            },
                            "method": "get",
                            "headers": {
                                "prefer": "odata.include-annotations=*",
                                "accept": "application/json;odata.metadata=full",
                                "organization": "https://lssmndryrun2.crm.dynamics.com"
                            },
                            "path": "/api/data/v9.1/@{encodeURIComponent(encodeURIComponent('pics_checks'))}",
                            "queries": {
                                "fetchXml": "<fetch version=\"1.0\" output-format=\"xml-platform\" mapping=\"logical\" distinct=\"false\">\n<entity name=\"pics_check\">\n<attribute name=\"pics_name\"/>\n<attribute name=\"createdon\"/>\n<attribute name=\"pics_providerid\"/>\n<attribute name=\"pics_payeeid\"/>\n<attribute name=\"pics_checkdate\"/>\n<attribute name=\"pics_checkamount\"/>\n<attribute name=\"pics_checkbalance_new\"/>\n<attribute name=\"pics_checkid\"/>\n<order attribute=\"pics_name\" descending=\"false\"/>\n<filter type=\"and\">\n<condition attribute=\"pics_checkamount\" operator=\"eq\" value=\"@{body('Parse_JSON')?['BPR02']}\"/>\n<condition attribute=\"pics_name\" operator=\"eq\" value=\"@{body('Parse_JSON')?['TRN02']}\"/>\n</filter>\n</entity>\n</fetch>"
                            }
                        },
                        "runAfter": {
                            "Parse_JSON": [
                                "SUCCEEDED"
                            ]
                        }
                    },
                    "Condition": {
                        "type": "If",
                        "expression": {
                            "and": [
                                {
                                    "greater": [
                                        "@length(body('pics_check_seek')?['value'])",
                                        0
                                    ]
                                }
                            ]
                        },
                        "actions": {
                            "Delete_rows": {
                                "type": "ServiceProvider",
                                "inputs": {
                                    "parameters": {
                                        "tableName": "[dbo].[IsaBprTrn]",
                                        "columnValuesForWhereCondition": {
