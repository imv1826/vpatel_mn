                                            "accept": "application/json;odata.metadata=full",
                                            "organization": "https://lssmndryrun2.crm.dynamics.com"
                                        },
                                        "path": "/api/data/v9.1/@{encodeURIComponent(encodeURIComponent('salesorders'))}",
                                        "queries": {
                                            "fetchXml": "<fetch version=\"1.0\" output-format=\"xml-platform\" mapping=\"logical\" distinct=\"false\">\n<entity name=\"salesorder\">\n<attribute name=\"name\"/>\n<attribute name=\"customerid\"/>\n<attribute name=\"statuscode\"/>\n<attribute name=\"totalamount\"/>\n<attribute name=\"ordernumber\"/>\n<attribute name=\"new_clientid\"/>\n<attribute name=\"pics_claimnumber\"/>\n<attribute name=\"salesorderid\"/>\n<order attribute=\"name\" descending=\"false\"/>\n<filter type=\"and\">\n<condition attribute=\"ordernumber\" operator=\"eq\" value=\"@{body('Parse_JSON')?['CLP01']}\"/>\n<condition attribute=\"statuscode\" operator=\"ne\" value=\"456010014\"/>\n</filter>\n</entity>\n</fetch>"
                                        }
                                    },
                                    "runAfter": {
                                        "Set_variable_totalPaid": [
                                            "SUCCEEDED"
                                        ]
                                    }
                                },
                                "Claim_activity_first_insert": {
