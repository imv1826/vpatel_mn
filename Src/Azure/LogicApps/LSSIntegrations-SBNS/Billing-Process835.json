                                    "inputs": {
                                        "host": {
                                            "connection": {
                                                "referenceName": "commondataservice-1"
                                            }
                                        },
                                        "method": "post",
                                        "body": {
                                            "pics_checkamount": "@float(body('Parse_JSON')?['BPR02'])",
                                            "pics_checkdate": "@body('Parse_JSON')?['BPR16']",
                                            "pics_name": "@body('Parse_JSON')?['TRN02']",
                                            "pics_checkbalance": "@float(body('Parse_JSON')?['BPR02'])",
                                            "pics_providerid@odata.bind": "/accounts(@{body('Get_a_SA_by_ID')?['_new_billtoaccountid_value']})"
                                        },
